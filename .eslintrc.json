{
    "plugins": ["cypress", "@typescript-eslint"],
    "env": {
        "browser": true,
        "es6": true,
        "jest": true,
        "cypress/globals": true
    },
    "extends": "eslint:recommended",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double",
            {
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error"
    }
}
